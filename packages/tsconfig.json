{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "..",
    "outDir": "./packages/dist",
    "paths": {
      "~~": ["."],
      "~~/*": ["./*"]
    },
    "noEmit": false
  },
  "include": ["./**/*.ts", "../utils/types", "../utils/_lib"],
  "exclude": ["vite.config.ts", "node_modules"]
}
